<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CustomMessageStyle" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <!-- Add other style properties as needed -->
    </Style>

    <ControlTemplate x:Key="CustomMessageTemplate" TargetType="Window">
        <!-- Your custom template goes here -->
        <Border BorderBrush="Black" BorderThickness="2.5" Background="Black" Padding="1">
            <StackPanel>
                <TextBlock Text="Amadeus AI Login" FontWeight="Bold" FontSize="15" Margin="2" FontFamily="Consolas" Foreground="Orange"/>
                <ContentPresenter Content="{TemplateBinding Content}" />
            </StackPanel>
        </Border>
    </ControlTemplate>

</ResourceDictionary>

